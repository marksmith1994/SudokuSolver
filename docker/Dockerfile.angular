# Use Node.js 18 for Angular development
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install Angular CLI globally
RUN npm install -g @angular/cli@17

# Copy package files
COPY sudoku-ui/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY sudoku-ui/ .

# Expose port for Angular dev server
EXPOSE 4200

# Start Angular development server with host binding for Docker
CMD ["ng", "serve", "--host", "0.0.0.0", "--port", "4200", "--poll", "2000"] 